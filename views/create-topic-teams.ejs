                                <div class="back" onclick="changePage('type');"><i
                                        class="fa-solid fa-arrow-left-from-line"></i>назад</div>
                                <div class="complete" onclick="checkTitle();">далее<i
                                        class="fa-solid fa-arrow-right-from-line"></i></div>
                            </div>
                        </div>

                        <div id="form_description" class="form d-none">
