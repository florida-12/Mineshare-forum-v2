    <div class="container">
        <div class="row">
            <div id="form_test_support" class="col-2 d-none"></div>

            <div id="form_test" class="col-8 d-none" style="display: flex;align-items: center; justify-content: center;">
                <div class="card">
                    <div class="d-flex justify-content-between">
                        <div class="form-title">
                            <div id="test_title"></div>
                        </div>
                        <div class="form-version">
