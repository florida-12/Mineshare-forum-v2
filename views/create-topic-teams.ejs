    <script>
        function changePage(page) {
            switch (page) {
                case "type":
                    $('#form_type').removeClass('d-none');
                    $('#form_name').addClass('d-none');
                    $('#form_description').addClass('d-none');
                    $('#form_contact').addClass('d-none');
                    break;
                case "name":
                    $('#form_type').addClass('d-none');
                    $('#form_name').removeClass('d-none');
                    $('#form_description').addClass('d-none');
                    $('#form_contact').addClass('d-none');
                    break;
                case "description":
                    $('#form_type').addClass('d-none');
                    $('#form_name').addClass('d-none');
                    $('#form_description').removeClass('d-none');
                    $('#form_contact').addClass('d-none');
                    break;
                case "contact":
                    $('#form_type').addClass('d-none');
                    $('#form_name').addClass('d-none');
                    $('#form_description').addClass('d-none');
                    $('#form_contact').removeClass('d-none');
                    break;
            }
        }

        function addContact() {
            $('#contacts').append('<div class="input-box"><input name="contacts" placeholder="Ссылка или @username" value="" required><div class="close" onclick="$(this).parent().remove();"><i class="fa-solid fa-xmark"></i></div></div>');
        }

        function main() {
            $('#form_main').removeClass('d-none');
            $('#form_main_support').removeClass('d-none');

            $('#form_test').addClass('d-none');
            $('#form_test_support').addClass('d-none');
        }

        function checkTitle() {
            if ($('#title').val() == "") {
                $('#title').parent().addClass('error');
            } if ($('#version').val() == "") {
                $('#version').parent().addClass('error');
            } else {
                $('#title').parent().removeClass('error');
                $('#version').parent().removeClass('error');
                changePage('description');
            } 
        }

        function checkDescription() {
            if ($('#description').val() == "") {
                $('#description').addClass('error');
            } else {
                $('#description').removeClass('error');
                changePage('contact');
            } 
        }

        function test() {
            $('#form_main').addClass('d-none');
            $('#form_main_support').addClass('d-none');

            $('#form_test').removeClass('d-none');
            $('#form_test_support').removeClass('d-none');

            $('#test_title').text($('#title').val());
            $('#test_version').text($('#version').val());
            $('#test_description').text($('#description').val());

            $('#test_contact').html('');
            var contacts = Object.values($('[name="contacts"]'));
            contacts.forEach(element => {
                if (element.value != undefined) {
                    $('#test_contact').append(`<div class="form-contact"><div>${element.value}</div></div>`);
                }
            });
        }

        function publish() {
            $('#global').submit();
        }
    </script>
