            <div id="form_main_support" class="col-4"></div>

            <div id="form_main" class="col-4" style="display: flex;align-items: center; justify-content: center;">

                <input id="type" name="type" class="d-none" type="text" value="" readonly required>
                <div class="card">
                    <form id="global" action="" method="post">
                        <div id="form_type" class="form">
                            <div class="task">Что вас интересует?</div>
                            <div class="option-1" onclick="changePage('name'); $('#type').val('1');">
                                <div class="title">Я хочу организовать команду</div>
                                <i class="fa-solid fa-arrow-right-long"></i>
                            </div>
                            <div class="option-2" onclick="changePage('name'); $('#type').val('2');">
                                <div class="title">Я хочу найти команду</div>
                                <i class="fa-solid fa-arrow-right-long"></i>
                            </div>
                            <div class="back" onclick="history.back()"><i
                                    class="fa-solid fa-arrow-left-from-line"></i>вернуться</div>
                        </div>

